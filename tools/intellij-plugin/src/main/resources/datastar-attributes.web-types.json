{
  "$schema": "../../../../schema.json",
  "name": "Datastar",
  "version": "1.0.0",
  "js-types-syntax": "typescript",
  "description-markup": "markdown",
  "default-icon": "datastar-icon.png",
  "contributions": {
    "js": {
      "events": [
        {
          "name": "signal-change"
        },
        {
          "name": "raf"
        }
      ]
    },
    "html": {
      "attributes": [
        {
          "name": "data-attributes-*",
          "description": "Sets an elementâ€™s attribute value based on an expression.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-attributes",
          "value": {
            "kind": "expression",
            "type": [
              "string",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": "/html/attributes",
                "template": [
                  "data-attributes-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-attributes"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-class-*",
          "description": "Adds or removes a class from an element based on an expression.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-class",
          "value": {
            "kind": "expression",
            "type": [
              "boolean",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": "/css/classes",
                "template": [
                  "data-class-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-class"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-computed-*",
          "description": "Creates a signal that is computed based on an expression.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-computed",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-computed-",
              {
                "regex": "[-a-z0-9]+"
              }
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-indicator-*",
          "description": "Creates a signal to track in-flight backend requests.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-indicator",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-indicator-",
                  {
                    "regex": "[-a-z0-9]+"
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-indicator"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-on-*",
          "description": "Executes an expression whenever an event is triggered on an element.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-on",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": "/js/events",
                "template": [
                  "data-on-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-ref-*",
          "description": "Creates a signal whose value references an element.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-ref",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-ref-",
                  {
                    "regex": "[-a-z0-9]+"
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-ref"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-signals-*",
          "description": "Merges a signal into the existing signals.",
          "doc-url": "https://data-star.dev/guide/getting_started#data-signals",
          "value": {
            "kind": "expression",
            "type": [
              "string",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-signals-",
                  {
                    "regex": "[-a-z0-9]+"
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-signals"
                ],
                "priority": "normal"
              }
            ]
          }
        }
      ],
      "elements": [
        {
          "name": "Standard HTML elements extension",
          "description": "This is a workaround to provide /js/properties on standard HTML elements.",
          "extension": true,
          "pattern": {
            "or": [
              "input",
              "textarea",
              "select",
              "checkbox",
              "radio"
            ]
          },
          "attributes": [
            {
              "name": "data-bind-*",
              "description": "Creates a new signal and enables two-way binding between it and the element.",
              "doc-url": "https://data-star.dev/guide/getting_started#data-bind",
              "value": {
                "kind": "expression",
                "type": "string",
                "required": true
              },
              "pattern": {
                "or": [
                  {
                    "template": [
                      "data-bind-",
                      {
                        "regex": "[-a-z0-9]+"
                      }
                    ],
                    "priority": "normal",
                    "required": false
                  },
                  {
                    "template": [
                      "data-bind"
                    ],
                    "priority": "normal"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  }
}